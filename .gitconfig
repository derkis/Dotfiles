[user]
  name  = Ty Cobb
  email = ty.cobb.m@gmail.com

[core]
  excludesfile = ~/.gitignore_global
	editor = /usr/local/bin/vim

[alias]
  alias = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\t=> \\2/' | sort
  st    = status
  lg    = log --color --no-merges
  ci    = commit
  cim   = commit -m
  cam   = commit -a -m
  br    = branch
  dbr   = branch -d
  co    = checkout
  cbr   = checkout -b
  rb    = rebase
  rp    = remote prune
  plo   = "!git pull origin $(git br -vv | grep \"[*].*\\[.*\\]\" | cut -d ' ' -f 2)"
  pso   = "!git push origin $(git br -vv | grep \"[*].*\\[.*\\]\" | cut -d ' ' -f 2)"
  ulc   = reset --soft HEAD^
  count = rev-list HEAD --count
  
[color]
  diff   = auto
  status = auto
  branch = auto
  ui     = true
  pager  = true  
  interactive = auto
 
[color "status"]
  branch    = yellow
  added     = yellow
  changed   = dim cyan
  untracked = dim white

[push]
  default = nothing

[pager]
  branch = false
  diff = diff-so-fancy | less
  show = diff-so-fancy | less

[credential]
  helper = osxkeychain

