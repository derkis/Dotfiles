#!/bin/zsh

alias gitrc='vim ~/.gitconfig'
alias vimrc='vim ~/.vimrc'
alias tmuxrc='vim ~/.tmux.conf'

# shell
alias lsh='ls -a'
alias lsl='ls -l -G'
alias ps='ps -xva'

# webdev
alias bower='noglob bower'
alias pg='postgres -D /usr/local/var/postgres'
alias be='bundle exec'
alias bs='bundle exec spring'
